<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settingsItemStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:drawableTint">@color/iconColor</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/mainMenuItemColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textColor">@color/baseColor</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">@dimen/main_menu</item>
        <item name="cornerRadius">@dimen/main_menu_card_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/baseColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="mainToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/main_menu</item>
        <item name="android:textColor">@color/mainMenuLogoColor</item>
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settingsToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="findTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="trackInfoLeftTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13dp</item>
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
        <item name="android:textColor">@color/textViewTrackInfoColor</item>
    </style>

    <style name="trackInfoRightTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="layout_constraintEnd_toEndOf">@id/rightBorder</item>
        <item name="color">?attr/colorSecondary</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextHintStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="hintTextColor">@color/input_edit_text_colors</item>
        <item name="boxStrokeColor">@color/input_edit_text_colors</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="cursorColor">@color/blueColor</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MiniPlaylistInfoItem" parent="Widget.AppCompat.TextView">
        <item name="android:paddingVertical">21dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>